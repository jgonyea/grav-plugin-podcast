{% extends 'partials/base.html.twig' %}

{% block content %}
    <h1>{{ header.title }}</h1>
    
    {% if page.parent.name == 'podcast-series.md' %}
        <h2>An episode in the series {{page.parent.title}}</h2>
    {% endif %}
    <h3>Posted {{ header.date|date('Y-m-d')|nicetime(false) }}</h3>
    
    {{ page.content }}

    {% if page.header.podcast.audio %}
        {% set audio_file = page.header.podcast.audio|first.name  %}
    {% elseif page.header.podcast.audio_url %}
        {% set audio_file = page.header.podcast.audio_url  %}
    {% endif %}

    {{ page.media[ audio_file ].html() }}

{% endblock %}